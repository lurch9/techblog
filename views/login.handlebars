<div class="d-flex align-items-center justify-content-center flex-column login-page">
    <form class="space-y-6 signup-form">
        <div class="form-group">
            <input id="name-signup" name="name-signup" type="text" autocomplete="name" required class="px-8 py-2 rounded-xl sm:text-sm my-2" placeholder="Name">
        </div>
        <div class="form-group">
            <label for="email-signup" class="sr-only">Email address</label>
            <input id="email-signup" name="email-signup" type="email" autocomplete="email" required class="px-8 py-2 rounded-xl sm:text-sm my-2" placeholder="Email address">
        </div>
        <div class="form-group">
            <label for="password-signup" class="sr-only">Password</label>
            <input id="password-signup" name="password-signup" type="password" autocomplete="email" required class="px-8 py-2 rounded-xl sm:text-sm my-2" placeholder="Email address">
        </div>

        <button type="submit" class="btn btn-primary">Sign Up</button>

    </form>
    <form class="py-5 space-y-6 login-form">
        <div class="form-group">
            <label for="email-login" class="sr-only">Email address</label>
            <input id="email-login" name="email-login" type="email" autocomplete="email" required class="px-8 py-2 rounded-xl sm:text-sm my-2" placeholder="Email address">
        </div>
        <div class="form-group">
            <label for="password-login" class="sr-only">Password</label>
            <input id="password-login" name="password-login" type="password" autocomplete="email" required class="px-8 py-2 rounded-xl sm:text-sm my-2" placeholder="Email address">
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div>
<script src="/js/login.js"></script>